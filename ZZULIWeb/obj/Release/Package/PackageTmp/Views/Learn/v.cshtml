    <div class="video_content">
        <!--标签页-->
        <ol>
            @{
                int tab = Convert.ToInt32(ViewBag.Page);
                switch (tab)
                {
                    case 1:
            <a class="ajax_goto_tab tab_active" id="cc" data-id="@(Model)|0">评论</a>
            <a class="ajax_goto_tab" id="cq" data-id="@(Model)|0">问答</a>
