            <a class="ajax_goto_tab" id="cn" data-id="@(Model)|0">笔记</a>
                        break;
                    case 3:
            <a class="ajax_goto_tab" id="cc" data-id="@(Model)|0">评论</a>
            <a class="ajax_goto_tab" id="cq" data-id="@(Model)|0">问答</a>
            <a class="ajax_goto_tab tab_active" id="cn" data-id="@(Model)|0">笔记</a>
                        break;
                    default:
            <a class="ajax_goto_tab tab_active" id="cc" data-id="@(Model)|0">评论</a>
            <a class="ajax_goto_tab" id="cq" data-id="@(Model)|0">问答</a>
            <a class="ajax_goto_tab" id="cn" data-id="@(Model)|0">笔记</a>
                        break;
                }
            }
        </ol>

        <div id="content-null" style="display:none;"><p>正在加载内容...</p></div>
        <!--内容-->
        <div class="video_content_l" id="replace">
            @{
                int page = Convert.ToInt32(ViewBag.Page);
                switch (page)
                {
                    case 1:
                        @Html.Action("comment", new { id = @Model })
                        break;
                    case 2:
                    @Html.Action("question", new { id = @Model })
                        break;
                    case 3:
                    @Html.Action("note", new { id = @Model })
                        break;
                    default:
                    @Html.Action("comment", new { id = @Model })
                        break;
                }
            }

        </div>

        <!--推荐课程-->
        <div class="video_content_r">
